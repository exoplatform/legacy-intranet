<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
  <portlet>
    <portlet-name>GettingStartedPortlet</portlet-name>
    <display-name xml:lang="EN">Getting Started</display-name>
    <portlet-class>org.exoplatform.platform.portlet.juzu.gettingstarted.GettingstartedPortlet</portlet-class>
    <init-param>
      <description>List of profiles that can be used to enable this portlet</description>
      <name>exo.profiles</name>
      <value>ecms</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <supported-locale>fr</supported-locale>
    <resource-bundle>locale.portlet.gettingStarted.gettingStarted</resource-bundle>
    <portlet-info>
      <title>getting Started</title>
      <short-title>getting Started</short-title>
      <keywords>Juzu social intranet</keywords>
    </portlet-info>
  </portlet>
  <portlet>
    <portlet-name>SuggestionsPeopleSpace</portlet-name>
    <display-name xml:lang="EN">Suggestions Portlet</display-name>
    <portlet-class>org.exoplatform.platform.portlet.juzu.suggestions.SuggestionsPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <supported-locale>fr</supported-locale>
    <resource-bundle>locale.portlet.suggestions.suggestions</resource-bundle>
    <portlet-info>
      <title>Suggestions</title>
      <short-title>Suggestions</short-title>
      <keywords>Juzu social intranet</keywords>
    </portlet-info>
  </portlet>
  <portlet>
    <portlet-name>Invitations</portlet-name>
    <display-name xml:lang="EN">Invitations</display-name>
    <portlet-class>org.exoplatform.platform.portlet.juzu.invitations.InvitationsPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
     <supported-locale>fr</supported-locale>
    <resource-bundle>locale.portlet.invitations.invitations</resource-bundle>
    <portlet-info>
      <title>Invitations</title>
      <short-title>Invitations</short-title>
      <keywords>Juzu social intranet</keywords>
    </portlet-info>
  </portlet>
  <portlet>
    <portlet-name>HomePageCalendarPortlet</portlet-name>
    <display-name xml:lang="EN">Calendar Portlet</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <description>List of profiles that can be used to enable this portlet</description>
      <name>exo.profiles</name>
      <value>calendar</value>
    </init-param>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/calendar-home-app/index.html</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <supported-locale>fr</supported-locale>
    <resource-bundle>locale.portlet.calendar.calendar</resource-bundle>
    <portlet-info>
      <title>Calendar Portlet</title>
      <short-title>Calendar Portlet</short-title>
      <keywords>Juzu social intranet</keywords>
    </portlet-info>
  </portlet>
</portlet-app>